<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_round_white_top"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/rlGoogle"
            android:layout_width="@dimen/button_login"
            android:layout_height="@dimen/button_login"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_login_google"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:src="@drawable/img_login_google" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNaver"
            android:layout_width="@dimen/button_login"
            android:layout_height="@dimen/button_login"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_login_naver"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="4dp"
                android:src="@drawable/img_login_naver" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFacebook"
            android:layout_width="@dimen/button_login"
            android:layout_height="@dimen/button_login"
            android:background="@drawable/button_login_facebook"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_login_facebook" />
        </RelativeLayout>
    </LinearLayout>

    <include
        layout="@layout/common_division_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <Button
        android:id="@+id/btClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white_bott"
        android:text="닫기" />

</LinearLayout>
